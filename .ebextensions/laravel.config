option_settings:
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: /health
  aws:elasticbeanstalk:application:environment:
    APP_ENV: production
    APP_DEBUG: false
files:
  "/etc/nginx/conf.d/01_laravel.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 80;
          server_name localhost;
          root /var/www/html/public;
          index index.php index.html index.htm;
          location / {
              try_files $uri $uri/ /index.php?$query_string;
          }
          location ~ \.php$ {
              try_files $uri =404;
              fastcgi_pass unix:/var/run/php-fpm.sock;
              fastcgi_index index.php;
              fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
              include fastcgi_params;
          }
      }
commands:
  01_reload_nginx:
    command: /usr/sbin/nginx -s reload
  02_install_composer:
    command: curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer
  03_run_composer:
    command: cd /var/www/html && /usr/local/bin/composer install --no-dev --optimize-autoloader
  04_set_permissions:
    command: chown -R webapp:webapp /var/www/html/storage /var/www/html/bootstrap/cache
  05_run_migrations:
    command: cd /var/www/html && php artisan migrate --force